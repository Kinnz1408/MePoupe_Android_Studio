<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.henriquel.mepoupegame.main">

    <TextView
            android:id="@+id/alegria"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:text="Alegria: 100"
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:gravity="center_vertical"
    />

    <TextView
            android:id="@+id/dinheiro"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Dinheiro: 100"
            android:textSize="18sp" />


    <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/boyzo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/boyzo"
                android:visibility="visible"
        />
        <ImageButton
                android:id="@+id/dado"
                android:text="Play"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/dado"
                android:layout_gravity="center"
                android:layout_marginBottom="-160dp"

        />
        <ImageButton
                android:id="@+id/carta"
                android:text="Play"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:src="@drawable/carta"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:scaleType="centerCrop"
                android:visibility="invisible"

        />


        <TextView
                android:id="@+id/taptoroll"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Tap to Roll !"
                android:textSize="30sp"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="90dp"
        />

        <ImageView
                android:id="@+id/qudrado"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/quadrado_preto"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
        />



    </FrameLayout>

</LinearLayout>
